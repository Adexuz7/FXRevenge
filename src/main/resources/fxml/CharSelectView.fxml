<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root fx:id="root" alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="15.0" stylesheets="@../css/menu.css" type="VBox" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label fx:id="tituloLabel" alignment="CENTER" text="CreaciÃ³n de Personaje" />
      <HBox fx:id="nombreBox" alignment="CENTER" spacing="15.0" VBox.vgrow="ALWAYS">
         <children>
            <Label text="Nombre:" />
            <TextField fx:id="nombreField" />
         </children>
      </HBox>
      <HBox fx:id="sexoBox" alignment="CENTER" spacing="15.0" VBox.vgrow="ALWAYS">
         <children>
            <Label text="Sexo: " />
            <RadioButton fx:id="FemeninoRB" mnemonicParsing="false" text="Femenino" />
            <RadioButton fx:id="MasculinoRB" mnemonicParsing="false" text="Masculino" />
         </children>
      </HBox>
      <HBox fx:id="profesionBox" alignment="CENTER" spacing="15.0" VBox.vgrow="ALWAYS">
         <children>
            <Label text="Clase:" />
            <RadioButton fx:id="ArchmageRB" mnemonicParsing="false" text="Archmage" />
            <RadioButton fx:id="HunterRB" mnemonicParsing="false" text="Hunter" />
            <RadioButton fx:id="WarlordRB" mnemonicParsing="false" text="Warlord" />
         </children>
      </HBox>
      <HBox fx:id="resultadoBox" alignment="CENTER" spacing="15.0" VBox.vgrow="ALWAYS">
         <children>
            <VBox>
               <children>
                  <Label fx:id="nombreLabel" text="Label" />
                  <ImageView fx:id="playerImage" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </VBox>
         </children>
      </HBox>
      <Button fx:id="FinalizarButton" mnemonicParsing="false" onAction="#onFinalizarButton" text="Finalizar" />
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</fx:root>
